<%= form_for @post do |f| %>

    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %> <br>
    </p>

    <p>
        <%= f.label :username %> <br>
        <%= f.text_field :username %> <br>
    </p>

    <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %> <br>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>