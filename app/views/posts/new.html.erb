<h1>New Template</h1>

<%= form_for :post, url: posts_path do |f| %>

    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %> <br>
    </p>

    <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %> <br>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>