<div id="content_wrapper">

    <h1 class="title">
        <%= @post.title %>
    </h1>

    <p class="date">
        Created <%= time_ago_in_words(@post.created_at) %> ago by <span style="color: #33acb7"><%= @post.username %></span></p>
    <% if user_signed_in? %>
        <span style="color: #33acb7"><br> <%= link_to "Edit", edit_post_path(@post) %> </span> |
        <span style="color: #33acb7"><%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}%></span> |
        <span style="color: #33acb7"><%= link_to "View JSON", post_path(@post) + ".json?" %></span> |
        <span style="color: #33acb7"><%= link_to "View XML", post_path(@post) + ".xml?" %></span>
    <% end %>
    </p>

    <br>
    <p class="body">

        <%= @post.description %>
    </p>

</div>
