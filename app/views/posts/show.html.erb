<div id="content_wrapper">

    <h1 class="title">
        <%= @post.title %>
    </h1>

    <p class="date">
        Created <%= time_ago_in_words(@post.created_at) %> ago
        <% if user_signed_in? %>
            <br><br> <%= link_to "Edit", edit_post_path(@post) %> |
            <%= link_to "Delete", post_path(@post), method: :delete,
                        data: {confirm: "Are you sure?"} %> |
            <%= link_to "View JSON", post_path(@post) + ".json?"  %> |
            <%= link_to "View XML", post_path(@post) + ".xml?"  %>

    <% end %>
    </p>

    <p class="body">

        <%= @post.description %>
    </p>

</div>
